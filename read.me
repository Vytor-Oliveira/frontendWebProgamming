<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Painel do Administrador</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 20px; background-color: #f8f9fa; }
        h2 { text-align: center; }
        .container { max-width: 800px; margin: auto; background: white; padding: 20px; border-radius: 8px; box-shadow: 0px 0px 10px rgba(0,0,0,0.1); }
        table { width: 100%; border-collapse: collapse; margin-top: 20px; }
        th, td { border: 1px solid #ddd; padding: 8px; text-align: center; }
        th { background-color: #f4f4f4; }
        .btn { padding: 5px 10px; margin: 2px; cursor: pointer; border-radius: 4px; }
        .btn-edit { background-color: #ffc107; border: none; }
        .btn-delete { background-color: #dc3545; color: white; border: none; }
        input, select { width: 100%; padding: 8px; margin: 5px 0; border: 1px solid #ddd; border-radius: 4px; }
    </style>
</head>
<body>
    <h2>Painel do Administrador</h2>
    <div class="container">
        <h3>Adicionar Produto</h3>
        <input type="text" id="productName" placeholder="Nome do Produto">
        <input type="number" id="productPrice" placeholder="Preço">
        <input type="text" id="productCategory" placeholder="Categoria">
        <input type="file" id="productImage">
        <button onclick="addProduct()">Adicionar</button>
        
        <h3>Buscar Produto</h3>
        <input type="text" id="searchBox" placeholder="Buscar produto" onkeyup="searchProduct()">
        
        <h3>Lista de Produtos</h3>
        <table>
            <thead>
                <tr>
                    <th>Imagem</th>
                    <th>Nome</th>
                    <th>Preço</th>
                    <th>Categoria</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody id="productList"></tbody>
        </table>
    </div>

    <script>
        let products = [];

        function addProduct() {
            const name = document.getElementById('productName').value;
            const price = document.getElementById('productPrice').value;
            const category = document.getElementById('productCategory').value;
            const imageInput = document.getElementById('productImage');
            
            if (!name || !price || !category || !imageInput.files.length) {
                alert("Todos os campos são obrigatórios!");
                return;
            }
            
            const reader = new FileReader();
            reader.onload = function(e) {
                products.push({ name, price, category, image: e.target.result });
                renderProducts();
                document.getElementById('productName').value = '';
                document.getElementById('productPrice').value = '';
                document.getElementById('productCategory').value = '';
                document.getElementById('productImage').value = '';
            };
            reader.readAsDataURL(imageInput.files[0]);
        }

        function renderProducts() {
            const productList = document.getElementById('productList');
            productList.innerHTML = '';
            products.forEach((product, index) => {
                productList.innerHTML += `
                    <tr>
                        <td><img src="${product.image}" width="50"></td>
                        <td>${product.name}</td>
                        <td>R$ ${product.price}</td>
                        <td>${product.category}</td>
                        <td>
                            <button class="btn btn-edit" onclick="editProduct(${index})">Editar</button>
                            <button class="btn btn-delete" onclick="deleteProduct(${index})">Excluir</button>
                        </td>
                    </tr>`;
            });
        }

        function deleteProduct(index) {
            if (confirm("Tem certeza que deseja excluir este produto?")) {
                products.splice(index, 1);
                renderProducts();
            }
        }

        function editProduct(index) {
            const newName = prompt("Novo nome do produto:", products[index].name);
            const newPrice = prompt("Novo preço do produto:", products[index].price);
            const newCategory = prompt("Nova categoria do produto:", products[index].category);
            if (newName && newPrice && newCategory) {
                products[index] = { ...products[index], name: newName, price: newPrice, category: newCategory };
                renderProducts();
            }
        }

        function searchProduct() {
            const searchValue = document.getElementById('searchBox').value.toLowerCase();
            const productList = document.getElementById('productList');
            productList.innerHTML = '';
            products.filter(product => product.name.toLowerCase().includes(searchValue)).forEach((product, index) => {
                productList.innerHTML += `
                    <tr>
                        <td><img src="${product.image}" width="50"></td>
                        <td>${product.name}</td>
                        <td>R$ ${product.price}</td>
                        <td>${product.category}</td>
                        <td>
                            <button class="btn btn-edit" onclick="editProduct(${index})">Editar</button>
                            <button class="btn btn-delete" onclick="deleteProduct(${index})">Excluir</button>
                        </td>
                    </tr>`;
            });
        }
    </script>
</body>
</html>